<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/resume_item_spacing">

    <TextView
        android:id="@+id/work_textview_name"
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Avalon English School" />

    <TextView
        android:id="@+id/work_textview_location"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/work_textview_name"
        tools:text="Bupyeong, KR" />

    <TextView
        android:id="@+id/work_textview_position"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/work_textview_name"
        android:textIsSelectable="true"
        android:textStyle="bold"
        tools:text="English Teacher" />

    <TextView
        android:id="@+id/work_textview_years"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/work_textview_position"
        android:paddingTop="8dp"
        android:textIsSelectable="true"
        tools:text="March 2014 - March 2015" />


</RelativeLayout>