    <io.github.ciscorucinski.personal.intro.ui.custom.SkillsTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:skillList="Java, C#"
        app:skillType="Language" />

    <io.github.ciscorucinski.personal.intro.ui.custom.SkillsTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:skillList="Java, C#"
        app:skillType="Language" />

    <io.github.ciscorucinski.personal.intro.ui.custom.SkillsTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:skillList="Workflow Analysis, Requirements Gathering &amp; Analysis, Microsoft Office Specialist"
        app:skillType="Other" />

</LinearLayout>
