<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/bottom_sheet_frame">

    <TextView
        android:id="@+id/welcome_message"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="@string/bottom_sheet_welcome_text" />

    <TextView
        android:id="@+id/company_name"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/company_image"
        android:layout_below="@+id/welcome_message"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/company_image"
        android:gravity="center"
        android:text="@string/bottom_sheet_company" />

    <ImageView
        android:id="@+id/company_image"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_below="@+id/welcome_message"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/bottom_sheet_logo_description" />

</merge>

