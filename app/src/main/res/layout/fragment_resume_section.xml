<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/fragment_margin_top_bottom"
        android:layout_marginEnd="@dimen/fragment_margin_end"
        android:layout_marginStart="@dimen/fragment_margin_start"
        android:layout_marginTop="@dimen/fragment_margin_top_bottom"
        android:orientation="vertical">

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>